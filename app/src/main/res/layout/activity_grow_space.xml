<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:context=".activity.GrowSpaceActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/green" />

    <RelativeLayout
        android:id="@+id/rl_two_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp">

        <TextView
            android:id="@+id/tv_one_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="G R O W  S P A C E"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_one_login"
            android:text="Lorem ipsum is dummy text "
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="-50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_one_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="240dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#fcfcfc"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_alignParentTop="true"
                        android:id="@+id/imageViewGrowSpace"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/growspace"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="centerCrop"/>
                    <RelativeLayout
                        android:id="@+id/first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageViewGrowSpace"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/textViewGrowSpaceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/green"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text="Grow Space Name"
                        android:layout_marginLeft="10dp"></TextView>

                    <TextView
                        android:id="@+id/textViewGrowSpaceCode"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewGrowSpaceName"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/grey_700"
                        android:textSize="16dp"
                        android:text="Grow Code"
                        android:layout_marginLeft="10dp"></TextView>

                </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/second"
                        android:layout_below="@+id/first"
                       android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/secondLeft"
                            android:layout_marginLeft="10dp"
                            >
                        <TextView
                            android:id="@+id/textViewBucketNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/green"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:text="10"
                            android:layout_marginLeft="10dp"></TextView>

                        <TextView
                            android:id="@+id/textViewBucket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textViewBucketNumber"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/grey_500"
                            android:layout_centerHorizontal="true"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:text="Dutch Buckets"
                            android:layout_marginLeft="10dp"></TextView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/secondRight"
                            android:layout_toRightOf="@+id/secondLeft"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            >

                        <TextView
                            android:id="@+id/textViewGrowSpaceLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/green"
                            android:layout_centerHorizontal="true"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:text="5 sqm"
                            ></TextView>

                        <TextView
                            android:id="@+id/textViewGrowSpace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textViewGrowSpaceLeft"
                            android:layout_marginTop="5dp"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/grey_500"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:text="Space Left"></TextView>
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/right"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/arrowDown"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_drop_down_green_24dp"></ImageView>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/secondRightEnd"
                        android:layout_below="@+id/first"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/growUpdate"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_update_ash_24dp">

                        </ImageView>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/growDelete"
                            android:layout_centerHorizontal="true"
                            android:layout_toRightOf="@+id/growUpdate"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_delete_red_24dp">

                        </ImageView>

                    </RelativeLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>