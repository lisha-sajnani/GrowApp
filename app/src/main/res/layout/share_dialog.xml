<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/grey_500">

    <RelativeLayout
        android:id="@+id/firstRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageViewFacebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="13dp"
            app:srcCompat="@drawable/fbook" />

        <TextView
            android:id="@+id/textViewFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:layout_below="@+id/imageViewFacebook"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Facebook" />

        <ImageView
            android:id="@+id/imageViewInsta"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_alignLeft="@+id/imageViewFacebook"
            app:srcCompat="@drawable/instagram" />

        <TextView
            android:id="@+id/textViewInsta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewInsta"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/green"
            android:layout_alignLeft="@+id/textViewFacebook"
            android:text="Instagram" />

        <ImageView
            android:id="@+id/imageViewLinkedin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_alignLeft="@+id/imageViewInsta"
            app:srcCompat="@drawable/linkedin" />

        <TextView
            android:id="@+id/textViewLinkedIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:layout_alignLeft="@+id/textViewInsta"
            android:layout_below="@+id/imageViewLinkedin"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:text="Linked In" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondRow"
        android:layout_below="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/imageViewWhatsApp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/whatsapp" />

        <TextView
            android:id="@+id/textViewWhatsApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/green"
            android:layout_below="@+id/imageViewWhatsApp"
            android:layout_marginLeft="10dp"
            android:text="WhatsApp" />

        <ImageView
            android:id="@+id/imageViewTwitter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:layout_alignLeft="@+id/imageViewWhatsApp"
            app:srcCompat="@drawable/tw" />

        <TextView
            android:id="@+id/textViewTwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewTwitter"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/green"
            android:layout_alignLeft="@+id/textViewWhatsApp"
            android:text="Twitter" />

        <ImageView
            android:id="@+id/imageViewMessenger"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="110dp"
            android:layout_alignLeft="@+id/imageViewTwitter"
            app:srcCompat="@drawable/messenger" />

        <TextView
            android:id="@+id/textViewMessenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewTwitter"
            android:textColor="@color/green"
            android:layout_below="@+id/imageViewMessenger"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:text="Messenger" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ThirdRow"
        android:layout_below="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp">
    <TextView
        android:id="@+id/textViewCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:text="CANCEL" />
    </RelativeLayout>


    </RelativeLayout>