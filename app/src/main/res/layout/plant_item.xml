<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_container"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/defaultView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewPlant"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/basil" />

        <TextView
            android:id="@+id/textViewPlantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:textColor="@color/green"
            android:layout_marginTop="10dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewPlantNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp"
            android:textColor="@color/green"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/green"
            android:text="TextView" />

        <ToggleButton
            android:id="@+id/toggleButtonFavourite"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="7dp"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:text="" />
    </RelativeLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top|right"
    android:visibility="gone"
    android:height="@dimen/list_item_height"
    android:paddingLeft="@dimen/list_item_padding_sides"
    android:paddingRight="@dimen/list_item_padding_sides"
    android:id="@+id/swipeView">


    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#6a801b"
        android:id="@+id/swipeView1"
        android:orientation="horizontal"
        android:layout_marginTop="11dp"
        android:height="@dimen/list_item_height"
        android:paddingLeft="@dimen/list_item_padding_sides"
        android:paddingRight="@dimen/list_item_padding_sides">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/image_archive"
            android:layout_weight="1"
            android:src="@drawable/ic_archive_white_24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/swipeView1"
        android:layout_marginLeft="2dp"
        android:id="@+id/swipeView2"
        android:background="#b1d5c3"
        android:orientation="horizontal"
        android:layout_marginTop="11dp"
        android:height="@dimen/list_item_height"
        android:paddingLeft="@dimen/list_item_padding_sides"
        android:paddingRight="@dimen/list_item_padding_sides">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/image_fvt"
            android:layout_weight="1"
            android:src="@drawable/ic_favorite_border_white_24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/swipeView1"
        android:layout_marginLeft="2dp"
        android:id="@+id/swipeView3"
        android:background="#edc003"
        android:orientation="horizontal"
        android:layout_marginTop="11dp"
        android:height="@dimen/list_item_height"
        android:paddingLeft="@dimen/list_item_padding_sides"
        android:paddingRight="@dimen/list_item_padding_sides">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/image_share"
            android:layout_weight="1"
            android:src="@drawable/ic_share_white_24dp"/>

    </LinearLayout>

</LinearLayout>


</FrameLayout>