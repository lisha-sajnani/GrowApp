<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MonitorActivity"
    tools:layout_editor_absoluteY="25dp">

    <!--Make sure to save two images home and youtube in drawable folder-->

    <ImageButton
        android:id="@+id/simpleImageButtonHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="81dp"
        android:layout_marginEnd="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/custom_imagebuttton"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img46"
        app:layout_constraintBottom_toTopOf="@+id/simpleImageButtonYouTube"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/simpleImageButtonYouTube"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="79dp"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="19dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/custom_imagebuttton"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img47"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/GrowSpaceMonitoring"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simpleImageButtonHome" />

    <TextView
        android:id="@+id/PlantMonitoring"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="86dp"
        android:gravity="center_horizontal"
        android:text="Plant Growth Monitoring "
        android:textColor="@android:color/holo_green_dark"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/simpleImageButtonHome"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/GrowSpaceMonitoring"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_horizontal"
        android:text="Grow Space Monitoring"
        android:textColor="@android:color/holo_green_dark"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/simpleImageButtonYouTube"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"
        android:text="Maintaining all the elements that plants need for growth not only keeps your plant alive, it promotes healthier results and faster grow-times."
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toTopOf="@+id/GrowSpaceMonitoring"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/simpleImageButtonHome"
        app:layout_constraintTop_toBottomOf="@+id/PlantMonitoring" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="93dp"
        android:gravity="center_horizontal"
        android:text="For increasing the quality and quantity of yields by effectively controlling and monitoring the growing environment."
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/GrowSpaceMonitoring"
        app:layout_constraintTop_toBottomOf="@+id/GrowSpaceMonitoring" />

</android.support.constraint.ConstraintLayout>