<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen"
    tools:context=".activity.HomeActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/veggitechlogo" />

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="250dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/relative"
        android:background="@color/fifty_percent_transparency_grey_400">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:text="Welcome To" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:text="Grow App" />

        <Button
            android:id="@+id/buttonGetStarted"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/button_layout"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:textSize="16dp"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"
            android:text="GET STARTED" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:id="@+id/imageViewFacebook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/fbook" />

        <ImageView
            android:id="@+id/imageViewLinkedIn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/imageViewFacebook"
            android:layout_marginLeft="80dp"
            app:srcCompat="@drawable/lin" />

        <ImageView
            android:id="@+id/imageViewInstagram"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/imageViewLinkedIn"
            android:layout_marginLeft="80dp"
            app:srcCompat="@drawable/instagram" />

        <ImageView
            android:id="@+id/imageViewTwitter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/imageViewInstagram"
            android:layout_marginLeft="80dp"
            app:srcCompat="@drawable/tw" />


    </RelativeLayout>
</RelativeLayout>